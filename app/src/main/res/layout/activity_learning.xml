<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:fitsSystemWindows="false"
    tools:openDrawer="start">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/paleyellow"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lightpink"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white"
            android:layout_alignParentTop="true"
            app:title=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learning Hub"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/eb_garamond_extrabold"/>

        <ScrollView xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            xmlns:app="http://schemas.android.com/apk/res-auto">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:orientation="vertical"
                android:background="@color/watermelon">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tax"
                    android:text="Tax:"
                    android:background="@color/biscotti"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/eb_garamond"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:ignore="ScrollViewCount">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="169dp"
                                    android:layout_height="155dp"
                                    android:contentDescription="News"
                                    android:src="@drawable/incometax" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link1"
                                    android:clickable="true"
                                    android:textColorLink="@color/fuscia"
                                    android:text="The Income Tax Act of 1961"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textColor="@color/black"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginEnd="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img2"
                                    android:layout_width="169dp"
                                    android:layout_height="148dp"
                                    android:contentDescription="News2"
                                    android:src="@drawable/inttax" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link2"
                                    android:clickable="true"
                                    android:textColorLink="@color/fuscia"
                                    android:text="International Taxation"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textColor="@color/black"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img3"
                                    android:layout_width="173dp"
                                    android:layout_height="127dp"
                                    android:contentDescription="News3"
                                    android:src="@drawable/basicstax" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link3"
                                    android:textColor="@color/black"
                                    android:clickable="true"
                                    android:textColorLink="@color/fuscia"
                                    android:text="Basics of Taxes"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/investment"
                    android:text="Investment:"
                    android:background="@color/biscotti"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/eb_garamond"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:ignore="ScrollViewCount">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="139dp"
                                    android:contentDescription="News4"
                                    android:src="@drawable/invest" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link4"
                                    android:clickable="true"
                                    android:textColor="@color/black"
                                    android:textColorLink="@color/fuscia"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:text="Introduction To Investing"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="139dp"
                                    android:contentDescription="News5"
                                    android:src="@drawable/pedia" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link5"
                                    android:textColor="@color/black"
                                    android:clickable="true"
                                    android:textColorLink="@color/fuscia"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:text="Basics of Investing"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="139dp"
                                    android:contentDescription="News6"
                                    android:src="@drawable/grow" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link6"
                                    android:clickable="true"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:textColorLink="@color/fuscia"
                                    android:text="Financial Planning Tools"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="139dp"
                                    android:contentDescription="News7"
                                    android:src="@drawable/chart" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link7"
                                    android:clickable="true"
                                    android:textColorLink="@color/fuscia"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:textColor="@color/black"
                                    android:gravity="center"
                                    android:text="How to Start Investing?"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/war"
                    android:text="Savings:"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:background="@color/biscotti"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/eb_garamond"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:ignore="ScrollViewCount">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="139dp"
                                    android:contentDescription="News8"
                                    android:src="@drawable/savings1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link8"
                                    android:textColor="@color/black"
                                    android:clickable="true"
                                    android:textColorLink="@color/fuscia"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:text="Best High-Yielding Savings Account of Today"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img9"
                                    android:layout_width="159dp"
                                    android:layout_height="127dp"
                                    android:contentDescription="News9"
                                    android:src="@drawable/women" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link9"
                                    android:clickable="true"
                                    android:textColor="@color/black"
                                    android:textColorLink="@color/fuscia"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:text="Womens Savings Scheme"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="250dp"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/img10"
                                    android:layout_width="159dp"
                                    android:layout_height="127dp"
                                    android:contentDescription="News10"
                                    android:src="@drawable/savings3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:id="@+id/link10"
                                    android:clickable="true"
                                    android:textColor="@color/black"
                                    android:textColorLink="@color/fuscia"
                                    android:fontFamily="@font/eb_garamond"
                                    android:textSize="17dp"
                                    android:gravity="center"
                                    android:text="Why are Savings Important?"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>





    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:background="@color/butter"
        app:itemTextColor="@color/black"/>


</androidx.drawerlayout.widget.DrawerLayout>